@model IEnumerable<BookStore.Models.NHAXUATBAN>

@{
    ViewBag.Title = "Danh sách NXB";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>DANH SÁCH NHÀ XUẤT BẢN</h2>

<p>
    @Html.ActionLink("Thêm NXB", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã NXB
        </th>
        <th>
            Tên NXB
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Số điện thoại
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaNXB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenNXB)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diachi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienThoai)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MaNXB }) |
            @Html.ActionLink("Details", "Details", new { id = item.MaNXB }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.MaNXB })
        </td>
    </tr>
}

</table>
