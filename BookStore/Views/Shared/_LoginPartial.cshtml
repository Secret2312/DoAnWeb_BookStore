@using Microsoft.AspNet.Identity
@using BookStore.Models
@{
    var session = Session["Taikhoan"];
    var User = session as KHACHHANG;

}
@if (session != null)
{
    using (Html.BeginForm("DangXuat", "KhachHang", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
        <ul class="navbar-nav ml-auto">
            <li id ="user">
                Hello @User.HoTen
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown"><i class="fa fa-user"></i></li>
        <li>@Html.ActionLink("Log in", "Dangnhap", "KhachHang", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <li>@Html.ActionLink("Register", "DangKy", "KhachHang", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>

    </ul>

}
