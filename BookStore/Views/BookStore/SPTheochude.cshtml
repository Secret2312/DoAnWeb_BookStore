@model IEnumerable<BookStore.Models.SACH>

@{
    ViewBag.Title = "SPTheochude";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h3 style="Text-align: center;color: orangered">SÁCH THEO CHỦ ĐỀ</h3>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-3 col-md-3 col-lg-3">
            <div class="thumbnail">
                <a href="@Url.Action("Details", "BookStore", new {id = item.Masach})">
                    <img src="~/Images/@item.Anhbia" alt="@item.Tensach" style="height:250px;"/>
                    <div style="height:100px;">
                        <br />
                        <h4 style="text-align: center">@item.Tensach                            
                        </h4>
                        <p></p>
                    </div>
                    <div class="ratings">
                        <p class="pull-right">100 reviews</p>
                        <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                        </p>
                    </div>
                </a>
            </div>
        </div>
    }
</div>
